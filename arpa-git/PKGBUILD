# Maintainer: Todd Partridge <http://https://github.com/Gen2ly/archpkgs>

pkgname=arpa-git
_pkgname=${pkgname%-*}
pkgver=0.87.2
pkgrel=1
pkgdesc="(ar)ch (pa)ckages - a package tasks wrapper script for Arch Linux."
arch=("any")
url="https://github.com/Gen2ly/$_pkgname"
license=("GPL2")
depends=("trizen" "sudo")
makedepends=("git")
replaces=("arpa")
source=("git://github.com/Gen2ly/$_pkgname")
md5sums=('SKIP')

pkgver() {
  cd $srcdir/$_pkgname
  git describe --long | sed -r 's/-([0-9,a-g,A-G]{7}.*)//' | sed 's/-/./'
}

package() {
  cd $srcdir/$_pkgname
  install -Dm755 $_pkgname   $pkgdir/usr/bin/$_pkgname
  install -Dm644 license.txt $pkgdir/usr/share/licenses/$_pkgname/license.txt
}

# vim:set ts=2 sw=2 et:
