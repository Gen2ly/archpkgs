# Maintainer: Todd Partridge <http://https://github.com/Gen2ly/archpkgs>
# lynx -dump http://mirror.pnl.gov/fedora/fullfilelist | grep pandoc

pkgname=pandoc-bin
pkgver=1.11.1
pkgrel=1
pkgdesc="Convert between markup formats (no Haskell libs, binary)"
arch=('i686' 'x86_64')
url="http://johnmacfarlane.net/pandoc/"
license=('GPL')
optdepends=('texlive-most: for pdf creation')
conflicts=('haskell-pandoc' 'pandoc')
install=

# Hashes for each architechture
_pkgname=pandoc
_mirror=http://mirror.pnl.gov/fedora
_subdir=_subdir=linux/development/rawhide/"${CARCH/68/38}"/os/Packages/p
source=("$_mirror"/"$_subdir"/$_pkgname-$pkgver-2.fc20."$CARCH".rpm
        "$_mirror"/"$_subdir"/ghc-$_pkgname-$pkgver-2.fc20."$CARCH".rpm)
noextract=(    $_pkgname-$pkgver-2.fc20."$CARCH".rpm
           ghc-$_pkgname-$pkgver-2.fc20."$CARCH".rpm)
[ "$CARCH" = "x86_64" ]                                                 && \
  md5sums=(9e55c483c70c6c1f5e3acc26d539eacc
           c4d2c3653fd6669f62f5e96f5df4233f)  
[ "$CARCH" = "i686" ]                                                   && \
  md5sums=(13d5d62cae91870286b114b6af40977e
           ac6c6a47da238c23161d945f865846b6)  

package() {
	bsdtar -xf     $_pkgname-$pkgver-2.fc20."$CARCH".rpm -C "$pkgdir"
  bsdtar -xf ghc-$_pkgname-$pkgver-2.fc20."$CARCH".rpm -C "$pkgdir"
}