# Maintainer: Todd Partridge <https://github.com/Gen2ly/archpkgs>

pkgname=root-directory-cruft
pkgver=1.0
pkgrel=1
pkgdesc="Configuration files in root directory that don't belong to any package."
arch=('any')
url="http://foobar.org"
license=('none')
depends=('')
source=(systemd_activate-numlock.conf
        sysctl.d_99-sysctl.conf
        modprobe.d_loop.conf
        modprobe.d_nbd.conf
        modules-load.d_isofs.conf
        modules-load.d_kvm.conf
        modules-load.d_loop.conf
        modules-load.d_virtualbox.conf
        profile.d_vim-default-ed.sh)
md5sums=('6a9b1242ddbbe4d7f76d6c3d6d53c37e'
         'bd5e931b564579edb5ee97f303832a67'
         '9d98839361aba1a50a0cfa5fd31333e8'
         '1e4f57b9f12768880a21d1219aff40a4'
         '0bc20e405e789587894773216ee87c7e'
         '6a68c18b0f12cc438cae494ea26e8e38'
         '76113fcd80ba8c32d2df2258ef92ec59'
         '2ce9a2ffe6028531d18b5efe59494d8b'
         'd3b3e55d07d8de15802eedde0e5ffaa8')

package() {
  _pd=$pkgdir/etc
  install -Dm644 modprobe.d_loop.conf           $_pd/modprobe.d/loop.conf
  install -Dm644 modprobe.d_nbd.conf            $_pd/modprobe.d/nbd.conf
  install -Dm644 modules-load.d_isofs.conf      $_pd/modules-load.d/isofs.conf
  install -Dm644 modules-load.d_kvm.conf        $_pd/modules-load.d/kvm.conf
  install -Dm644 modules-load.d_loop.conf       $_pd/modules-load.d/loop.conf
  install -Dm644 modules-load.d_virtualbox.conf $_pd/modules-load.d/vbox.conf
  install -Dm755 profile.d_vim-default-ed.sh    $_pd/profile.d/vim-default-ed.sh
  install -Dm644 sysctl.d_99-sysctl.conf        $_pd/sysctl.d/99-sysctl.conf
  install -Dm644 systemd_activate-numlock.conf \
    $_pd/systemd/system/getty@.service.d/activate-numlock.conf
}

# vim:set ts=2 sw=2 et: